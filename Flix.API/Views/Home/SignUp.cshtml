
@{
    ViewData["Title"] = "Sign Up";

}


    <div class="img-container">
        <div class="card">
            <h1>#Flix</h1>
            <h2>Registering to #Flix has never been easier</h2>

            <form action="/User/SignUp" method="post">
                <input type="text" placeholder="Username" required="" name="username" class="form-input" />
                <input type="email" placeholder="Email" required="" name="emailAddress" class="form-input" />
                <input type="password" required="" placeholder="Password" name="password" class="form-input" />
                <input type="text" placeholder="FirstName" name="firstName" class="form-input" />
                <input type="text" placeholder="LastName" name="lastName" class="form-input" />
                <input type="submit" value="Sign-up" class="button" />
            </form>
        </div>
    </div>